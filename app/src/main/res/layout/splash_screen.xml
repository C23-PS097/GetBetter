<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SplashScreenActivity" >

	<ScrollView
		android:id="@+id/splash_screen"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<RelativeLayout
			android:id="@+id/content_container"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" >

			<View
				android:id="@+id/_bg__splash_screen"
				android:background="@drawable/_bg__splash_screen_shape"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:layout_width="428dp"
				android:layout_height="926dp" />

			<ImageView
				android:id="@+id/union"
				android:src="@drawable/union"
				android:contentDescription="union"
				android:layout_marginStart="152dp"
				android:layout_marginTop="355dp"
				android:layout_width="123dp"
				android:layout_height="123dp" />

			<TextView
				android:id="@+id/getbetter"
				android:textStyle="bold"
				android:layout_gravity="center_horizontal|center"
				android:gravity="center"
				android:textSize="48sp"
				android:textColor="@color/getbetter_color"
				android:layout_marginLeft="89dp"
				android:layout_marginTop="506dp"
				android:layout_width="264dp"
				android:layout_height="98dp"
				android:text="@string/getbetter_string" />


			<RelativeLayout
				android:id="@+id/status_bar"
				android:layout_marginTop="15dp"
				android:layout_marginStart="35dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >


				<RelativeLayout
					android:id="@+id/group_5"
					android:layout_marginTop="2dp"
					android:layout_marginStart="284dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" >

					<ImageView
						android:id="@+id/wifi"
						android:src="@drawable/wifi"
						android:contentDescription="wifi"
						android:layout_marginStart="24dp"
						android:layout_marginTop="0dp"
						android:layout_width="18dp"
						android:layout_height="13dp" />


					<RelativeLayout
						android:id="@+id/__battery"
						android:layout_marginTop="0dp"
						android:layout_marginStart="47dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" >

						<ImageView
							android:id="@+id/fill"
							android:src="@drawable/fill"
							android:contentDescription="fill"
							android:layout_marginStart="1.92dp"
							android:layout_marginTop="1.92dp"
							android:layout_width="20.19dp"
							android:layout_height="8.65dp" />

						<ImageView
							android:id="@+id/outline"
							android:src="@drawable/outline"
							android:contentDescription="outline"
							android:alpha="0.40000000596046"
							android:layout_marginStart="0dp"
							android:layout_marginTop="0dp"
							android:layout_width="26.6dp"
							android:layout_height="12.5dp" />

					</RelativeLayout>

					<ImageView
						android:id="@+id/reception"
						android:src="@drawable/reception"
						android:contentDescription="reception"
						android:layout_marginStart="0dp"
						android:layout_marginTop="1dp"
						android:layout_width="18.15dp"
						android:layout_height="11dp" />

				</RelativeLayout>

				<TextView
					android:id="@+id/time"
					android:textStyle="bold"
					android:layout_gravity="center_horizontal|center"
					android:gravity="center"
					android:textSize="18sp"
					android:textColor="@color/getbetter_color"
					android:layout_marginLeft="-3dp"
					android:layout_marginTop="0dp"
					android:layout_width="60dp"
					android:layout_height="31dp"
					android:text="@string/time_string" />

			</RelativeLayout>

			<View
				android:id="@+id/rectangle"
				android:background="@drawable/rectangle_shape"
				android:layout_marginStart="139dp"
				android:layout_marginTop="905dp"
				android:layout_width="151dp"
				android:layout_height="5dp" />

		</RelativeLayout>

	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>